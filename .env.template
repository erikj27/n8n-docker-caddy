# Docker Hub username for frontend image
DOCKER_USERNAME=${DOCKER_USERNAME}
FRONTEND_IMAGE_NAME=${FRONTEND_IMAGE_NAME}
FRONTEND_IMAGE_TAG=${FRONTEND_IMAGE_TAG}

# Data folder for persistent volumes
DATA_FOLDER=/home/${SERVER_USER}/n8n-docker-caddy

# Domain configuration
SUBDOMAIN=n8n
DOMAIN_NAME=${DOMAIN_NAME}

# n8n configuration
N8N_HOST=${SUBDOMAIN}.${DOMAIN_NAME}
N8N_PORT=5678
N8N_PROTOCOL=https
WEBHOOK_URL=https://${SUBDOMAIN}.${DOMAIN_NAME}/

# Timezone for n8n
GENERIC_TIMEZONE=America/New_York

# Database configuration
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=postgres
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=n8n
DB_POSTGRESDB_PASSWORD=${DB_PASSWORD}

# n8n function permissions
NODE_FUNCTION_ALLOW_BUILTIN=*
NODE_FUNCTION_ALLOW_EXTERNAL=${NODE_FUNCTION_EXTERNAL}

# Browserless token
BROWSERLESS_TOKEN=${BROWSERLESS_TOKEN}